<BorderPane styleClass="app" stylesheets="@../theme.css" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
    <left>
        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" spacing="40.0" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="TOP_CENTER" styleClass="huge-title" text="EduSync"/>
                <Label alignment="TOP_CENTER" maxWidth="320.0" prefWidth="320.0" styleClass="medium-text"
