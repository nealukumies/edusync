<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="app" stylesheets="@../theme.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
    <left>
        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="40.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <VBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <Hyperlink fx:id="assignmentsLink" styleClass="medium-text" text="%View_all_assignments" />
                <Hyperlink fx:id="coursesLink" styleClass="medium-text" text="%View_all_courses" />
                <Hyperlink fx:id="newCourseLink" styleClass="medium-text" text="%Add_new_course" />
                <Hyperlink fx:id="calendar" styleClass="medium-text" text="%Calendar" />
            </children>
        </VBox>
    </right>
    <center>
        <StackPane alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" StackPane.alignment="CENTER_LEFT">
                    <children>
                        <Label alignment="TOP_LEFT" styleClass="medium-title" text="%Upcoming_deadlines" />
                        <Hyperlink fx:id="addAssignmentLink" alignment="TOP_LEFT" styleClass="medium-text" text="%Add_new_assignment" />
                        <VBox fx:id="assignments" alignment="CENTER" />
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
</BorderPane>
