<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="30.0" styleClass="app" stylesheets="@../theme.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AssignmentController">
    <children>
      <HBox>
         <children>
              <Label fx:id="title" alignment="TOP_LEFT" prefWidth="500.0" styleClass="large-title" text="Assignment title" />
         </children>
      </HBox>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label prefWidth="200.0" styleClass="medium-text" text="Part of course: " />
                <Hyperlink fx:id="courseName" styleClass="medium-text" text="courseId" />
            </children>
        </HBox>
      <HBox>
         <children>
              <Label fx:id="desc" alignment="TOP_LEFT" styleClass="medium-text" text="Assignment description" />
         </children>
      </HBox>
      <HBox>
         <children>
              <Label fx:id="deadline" alignment="TOP_LEFT" styleClass="medium-text" text="Assignment deadline" />
         </children>
      </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="950.0" spacing="20.0">
            <children>
                <Label styleClass="medium-title" text="Current status" />
                <ChoiceBox fx:id="status" prefWidth="150.0" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="600.0" spacing="50.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" text="Save" />
            <Button fx:id="editButton" mnemonicParsing="false" text="Edit" />
                <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" />
            </children>
        </HBox>
    </children>
</VBox>
